<h1>Listing creds</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @creds.each do |cred| %>
      <tr>
        <td><%= cred.first_name %></td>
        <td><%= cred.last_name %></td>
        <td><%= cred.email %></td>
        <td><%= link_to 'Show', cred %></td>
        <td><%= link_to 'Edit', edit_cred_path(cred) %></td>
        <td><%= link_to 'Destroy', cred, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cred', new_cred_path %>
